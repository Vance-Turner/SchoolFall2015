\begin_body

\begin_layout Standard
Chapter 3: #2 Vance Turnewitsch
\end_layout

\begin_layout Standard
ii 
\begin_inset Formula $\left[\begin{array}{cc}
1 & 1\\
-1 & 0
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\series bold
A.
 Find the eigenvalues and eigenvectors of A
\end_layout

\begin_layout Standard
Characteristic Equation: 
\begin_inset Formula $(1-\lambda)(-\lambda)+1=0\rightarrow\lambda^{2}-\lambda+1=0$
\end_inset


\end_layout

\begin_layout Standard
Thus: 
\begin_inset Formula $\lambda=\frac{1\pm\sqrt{1-4}}{2}=\frac{1\pm i\sqrt{3}}{2}$
\end_inset


\end_layout

\begin_layout Standard
Thus: 
\begin_inset Formula $\lambda_{1}=\frac{1+i\sqrt{3}}{2}$
\end_inset

 and we proceed to find the eigenvector:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left[\begin{array}{cc}
1 & 1\\
-1 & 0
\end{array}\right]\left[\begin{array}{c}
a\\
b
\end{array}\right]=\frac{1+i\sqrt{3}}{2}\left[\begin{array}{c}
a\\
b
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{array}{c}
a+b=\lambda_{1}a\\
-a=\lambda_{1}b
\end{array}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{array}{c}
b=a(\lambda_{1}-1)\\
a=-\lambda_{1}b
\end{array}
\]

\end_inset


\end_layout

\begin_layout Standard
Thus eigenvector:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left[\begin{array}{c}
\frac{-1-i\sqrt{3}}{2}\\
1
\end{array}\right]
\]

\end_inset


\series bold
B.
 Find the matrix 
\begin_inset Formula $T$
\end_inset

 that puts 
\begin_inset Formula $A$
\end_inset

 in conanical form
\end_layout

\begin_layout Standard
So, we take the egienvector above and split it into its real and imaginary
 parts:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V_{1}=\left[\begin{array}{c}
-1/2\\
1
\end{array}\right],V_{2}=\left[\begin{array}{c}
-\sqrt{3}/2\\
0
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Thus we have: 
\begin_inset Formula 
\[
T=\left[\begin{array}{cc}
-1/2 & -\sqrt{3}/2\\
1 & 0
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard

\series bold
C.
 Find the general solution of both X'=AX and Y'=(
\begin_inset Formula $T^{-1}AT)Y$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
T^{-1}AT=\left[\begin{array}{cc}
0 & 1\\
-2/\sqrt{3} & -1/\sqrt{3}
\end{array}\right]\left[\begin{array}{cc}
1 & 1\\
-1 & 0
\end{array}\right]\left[\begin{array}{cc}
-1/2 & -\sqrt{3}/2\\
1 & 0
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\left[\begin{array}{cc}
0 & 1\\
-2/\sqrt{3} & -1/\sqrt{3}
\end{array}\right]\left[\begin{array}{cc}
1/2 & -\sqrt{3}/2\\
1/2 & \sqrt{3}/2
\end{array}\right]=\left[\begin{array}{cc}
1/2 & \sqrt{3}/2\\
-\sqrt{3}/2 & 1/2
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Y^{'}=\left[\begin{array}{cc}
1/2 & \sqrt{3}/2\\
-\sqrt{3}/2 & 1/2
\end{array}\right]Y
\]

\end_inset


\end_layout

\begin_layout Standard
Thus we have the solution for Y:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Y(t)=c_{1}e^{1/2t}\left(\begin{array}{c}
cos(\sqrt{3}/2t)\\
-sin(\sqrt{3}/2t)
\end{array}\right)+c_{2}e^{1/2t}\left(\begin{array}{c}
sin(\sqrt{3}/2t)\\
cos(\sqrt{3}/2t)
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=e^{1/2t}\left[\begin{array}{c}
c_{1}cos(\sqrt{3}/2t)+c_{2}sin(\sqrt{3}/2t)\\
c_{2}cos(\sqrt{3}/2t)-c_{1}sin(\sqrt{3}/2t)
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Now we use the map T to transform this solution into the X(t)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
X(t)=TY(t)=\left[\begin{array}{cc}
-1/2 & -\sqrt{3}/2\\
1 & 0
\end{array}\right]e^{1/2t}\left[\begin{array}{c}
c_{1}cos(\sqrt{3}/2t)+c_{2}sin(\sqrt{3}/2t)\\
c_{2}cos(\sqrt{3}/2t)-c_{1}sin(\sqrt{3}/2t)
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=e^{1/2t}\left[\begin{array}{c}
-\frac{c_{1}}{2}cos(\sqrt{3}/2t)-\frac{c_{2}}{2}sin(\sqrt{3}/2t)-\frac{\sqrt{3}c_{2}}{2}cos(\sqrt{3}/2t)+\frac{\sqrt{3}c_{1}}{2}sin(\sqrt{3}/2t)\\
c_{1}cos(\sqrt{3}/2t)+c_{2}sin(\sqrt{3}/2t)
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=e^{1/2t}\left[\begin{array}{c}
\frac{c_{1}}{2}\left(\sqrt{3}sin(\sqrt{3}/2t)-cos(\sqrt{3}/2t)\right)-\frac{c_{2}}{2}\left(\sqrt{3}cos(\sqrt{3}/2t)+sin(\sqrt{3}/2t)\right)\\
c_{1}cos(\sqrt{3}/2t)+c_{2}sin(\sqrt{3}/2t)
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
X(t)=c_{1}e^{1/2t}\left(\begin{array}{c}
\frac{\sqrt{3}}{2}sin(\sqrt{3}/2t)-\frac{1}{2}cos(\sqrt{3}/2t)\\
cos(\sqrt{3}/2t)
\end{array}\right)+c_{2}e^{1/2t}\left(\begin{array}{c}
\frac{-\sqrt{3}}{2}cos(\sqrt{3}/2t)-\frac{1}{2}sin(\sqrt{3}/2t)\\
sin(\sqrt{3}/2t)
\end{array}\right)
\]

\end_inset


\end_layout

\end_body
